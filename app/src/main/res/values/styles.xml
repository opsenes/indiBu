<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dark_purple</item>
        <item name="colorPrimaryDark">@color/dark_purple</item>
        <item name="colorAccent">@color/orange</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/iron</item>
        <item name="android:background">@color/orange</item>
    </style>
    <style name="HintTextLabel" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textColor">@color/beyaz</item>
        <item name="colorAccent">@color/beyaz</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">helvetica</item>
        <item name="android:textColorHint">@drawable/selector_login</item>
        
    </style>

    <style name="HintTextLabel2" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">helvetica</item>
    </style>

    <style name="ButtonText" parent="Base.Widget.AppCompat.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SpinnerText" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">helvetica</item>
    </style>

    <style name="TextView" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextInput" >
        <item name="android:textColor">@color/beyaz</item>
        <item name="android:textColorHint">@color/beyaz</item>
        <item name="colorAccent">@color/beyaz</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">helvetica</item>
        <item name="colorControlNormal">@color/orange</item>
        <item name="colorControlActivated">@color/beyaz</item>
        <item name="colorControlHighlight">@color/beyaz</item>
    </style>
    <style name="DropDownLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/beyaz</item>
        <item name="android:textColorHint">@color/beyaz</item>
        <item name="colorAccent">@color/beyaz</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">helvetica</item>
        <item name="android:gravity">right</item>

    </style>

    <style name="profile_settings">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="colorAccent">@color/dark_purple</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">helvetica</item>
        <item name="colorControlNormal">@color/dark_purple</item>
        <item name="colorControlActivated">@color/dark_purple</item>
        <item name="colorControlHighlight">@color/dark_purple</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="price">
        <item name="android:textColorHint">@drawable/selector_price</item>
    </style>

</resources>
