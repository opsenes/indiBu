<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="BaseFeedViewModel"
            type="com.internship.mts.internproject.viewmodel.BaseFeedViewModel" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.TabLayout
            android:id="@+id/feed_fragment_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="fixed"
            app:tabGravity="fill"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/feed_fragment_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/feed_fragment_tab_layout"
            android:clipToPadding="false"
            android:paddingBottom="20dp" />
    </RelativeLayout>

</layout>