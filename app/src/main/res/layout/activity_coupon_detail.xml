<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.internship.mts.internproject.CouponDetailActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/coupon_detail_activity_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:id="@+id/coupon_details_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_marginStart="@dimen/space_small"
        android:layout_marginEnd="@dimen/space_small"
        android:layout_marginBottom="@dimen/space_large"
        android:padding="@dimen/space_small"
        android:background="@color/beyaz"
        android:orientation="vertical"
        app:layout_collapseMode="parallax">

        <TextView
            android:id="@+id/coupon_details_textview_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_small"
            style="@style/TextView"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/coupon_details_textview_decription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_small"
            style="@style/TextView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/space_large"
            android:layout_marginBottom="@dimen/space_small"
            android:paddingLeft="@dimen/space_small"
            android:paddingRight="@dimen/space_small">

            <TextView
                android:id="@+id/coupon_details_textview_price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/space_mini"
                android:paddingEnd="@dimen/space_small"
                android:textColor="@color/black"
                android:text="@string/coupon_price_text"
                style="@style/TextView" />

            <TextView
                android:id="@+id/coupon_details_textview_price_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textAlignment="gravity"
                android:paddingStart="@dimen/space_mini"
                android:paddingEnd="@dimen/space_mini"
                style="@style/TextView" />

            <TextView
                android:id="@+id/coupon_details_textview_price_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/space_mini"
                android:paddingEnd="@dimen/space_small"
                android:textColor="@color/black"
                android:text="@string/coupon_currency_text"
                style="@style/TextView" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/space_large"
            android:layout_marginBottom="@dimen/space_small"
            android:paddingLeft="@dimen/space_small"
            android:paddingRight="@dimen/space_small">

            <TextView
                android:id="@+id/coupon_details_textview_postdate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="@dimen/space_mini"
                android:paddingEnd="@dimen/space_small"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/coupon_details_textview_postby"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:textAlignment="gravity"
                android:paddingStart="@dimen/space_mini"
                android:paddingEnd="@dimen/space_mini"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/coupon_detail_activity_text_view_author_reference"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:drawablePadding="-2dp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_star_small"
                android:textAlignment="center"
                android:layout_marginEnd="@dimen/space_small"
                app:layout_constraintRight_toRightOf="parent" />

        </LinearLayout>

        <Button
            android:id="@+id/coupon_details_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_default"
            android:layout_marginTop="@dimen/space_default"
            android:paddingStart="@dimen/space_default"
            android:paddingEnd="@dimen/space_default"
            android:background="@drawable/rounded_buttton"
            android:text="@string/coupon_message_button_text"
            android:drawableStart="@drawable/ic_email"
            android:textAllCaps="false"
            android:textColor="@color/beyaz"
            style="@style/ButtonText" />

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>